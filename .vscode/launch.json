    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug 'Gargoyle's Quest",
            "cargo": {
                "args": [
                    "build",
                    "--bin=platformer",
                    "--package=platformer"
                ],
                "filter": {
                    "name": "platformer",
                    "kind": "bin"
                }
            },
            "args": [
                "--no-music",
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug 'Gargoyle's Quest (Checkpoint)",
            "cargo": {
                "args": [
                    "build",
                    "--bin=platformer",
                    "--package=platformer"
                ],
                "filter": {
                    "name": "platformer",
                    "kind": "bin"
                }
            },
            "args": [
                "-c",
                "1",
                "-n"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug 'Gargoyle's Quest (w/ Overlay)",
            "cargo": {
                "args": [
                    "build",
                    "--bin=platformer",
                    "--package=platformer"
                ],
                "filter": {
                    "name": "platformer",
                    "kind": "bin"
                }
            },
            "args": [
                "--debug-overlay"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'platformer'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=platformer",
                    "--package=platformer"
                ],
                "filter": {
                    "name": "platformer",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}